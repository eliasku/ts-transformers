{
  "name": "@eliasku/ts-transformers",
  "description": "TypeScript transformer for code optimization",
  "version": "0.0.10",
  "license": "MIT",
  "scripts": {
    "build": "tsup ./src/index.ts --target esnext --platform neutral --format esm --dts --sourcemap --minify terser --treeshake smallest --splitting false",
    "test": "bun test",
    "format": "prettier --write **/*.{ts,json,md,yml}",
    "check": "tsc -p .",
    "lint": "eslint .",
    "build:example": "cd example && bun run build.ts"
  },
  "dependencies": {
    "typescript": "^5"
  },
  "optionalDependencies": {
    "prettier": "latest",
    "eslint": "latest",
    "typescript-eslint": "latest",
    "@types/bun": "latest",
    "rollup": "latest",
    "@rollup/plugin-typescript": "latest",
    "tslib": "latest",
    "esbuild": "latest",
    "tsup": "latest",
    "terser": "latest"
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./ts": "./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasku/ts-transformers.git"
  },
  "author": "Ilya Kuzmichev",
  "keywords": [
    "typescript",
    "ts",
    "plugin",
    "transformer",
    "minify",
    "treeshake",
    "mangle"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ]
}
